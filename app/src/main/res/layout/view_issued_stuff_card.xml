<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    app:cardElevation="1dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="4dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID"
                android:gravity="center_vertical|end"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/view_issued_stuff_obj_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="SB-234"
                android:gravity="center_vertical|start"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:layout_margin="8dp"
                android:padding="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="4dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subscriber Name"
                android:gravity="center_vertical|end"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/view_issued_stuff_sub_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="2"
                tools:text="Fardeen Panjwani"
                android:gravity="center_vertical|start"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:layout_margin="8dp"
                android:padding="4dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/view_issued_stuff_overflow_menu"
        android:layout_width="50px"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:src="@mipmap/ic_overflow_menu"
        android:scaleType="fitCenter"
        android:background="@android:color/white" />

</android.support.v7.widget.CardView>